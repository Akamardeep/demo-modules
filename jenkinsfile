pipeline {
    agent {
        docker {
            image 'docker:20.10.11' // Use a version of Docker compatible with your setup
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Install Node.js') {
            steps {
                script {
                    sh 'apk --no-cache add nodejs npm'
                }
            }
        }
        stage('Test') {
            steps {
                sh 'node --version'
            }
        }
    }
}
