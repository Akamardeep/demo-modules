pipeline {
    agent any
    stages {
         stage('Install Node.js') {
             steps {
                 script {
                    echo "hello amardeep"
                 }
             }
         }
        stage('Test') {
            steps {
                //sh "sudo apt-get install nodejs"
                 sh "printenv"
                 sh "nodejs -v"
                 sh 'node --version'
                sh "cd /var/lib/jenkins && ls -la"
            
            }
        }
stage('Build-Images') {
            steps {
              echo 'building images'
                sh 'build.sh'
            
            }
        }
    }
}
