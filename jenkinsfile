pipeline {
    agent any
    stages {
        stage('Install Node.js') {
            agent {
                docker { image 'node:16-alpine' }
            }
            steps {
                sh 'apk --no-cache add nodejs npm'
            }
        }
        stage('Test') {
            agent any
            steps {
                sh 'node --version'
            }
        }
    }
}
